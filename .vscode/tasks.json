{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cpp-build",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/out/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "cpp-build-run",
            "type": "shell",
            "command": "${workspaceFolder}/out/${fileBasenameNoExtension}",
            "args": [
                "<",
                "input.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "cpp-build"
            ]
        },
        {
            "label": "cpp-run",
            "type": "shell",
            "command": "${workspaceFolder}/out/${fileBasenameNoExtension}",
            "args": [
                "<",
                "input.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
    ],
    "version": "2.0.0"
}